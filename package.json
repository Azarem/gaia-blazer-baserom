{
    "name": "@gaialabs/blazer-baserom",
    "version": "0.1.0",
    "type": "module",
    "description": "GaiaLabs Soul Blazer Base ROM",
    "funding": "https://github.com/sponsors/Azarem",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.mjs",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "baserom",
        "README.md"
    ],
    "scripts": {
        "prebuild": "node -p \"'export const BASEROM_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "test": "vitest run",
        "test:watch": "vitest --watch",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist",
        "publish": "tsup && npm publish --access public",
        "extract": "ts-node src/index.ts extract",
        "extract-jp": "ts-node src/index.ts extract-jp",
        "extract-strings": "ts-node src/extractStrings.ts",
        "rebuild": "ts-node src/index.ts rebuild"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^8.36.0",
        "@typescript-eslint/parser": "^8.36.0",
        "eslint": "^9.30.1",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "keywords": [
        "rom-hacking",
        "typescript",
        "web-workers",
        "nodejs",
        "browser",
        "universal"
    ],
    "author": "GaiaLabs Team",
    "license": "MIT",
    "dependencies": {
        "@gaialabs/core": "file:../gaia-core"
    }
}
